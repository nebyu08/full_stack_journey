<!DOCTYPE html>
<html>

<head>
  <title>Taco Recipes</title>
  <link rel="stylesheet" type="text/css" href="/styles/main.css">
</head>

<body>
  <h1>Taco Town 🌮</h1>

  <form action="/recipe" method="POST" class="buttons">
    <button type="submit" value="chicken taco" name="choice">🍗</button>
    <button type="submit" value="beef" name="choice">🥩</button>
    <button type="submit" value="fish" name="choice">🐟</button>
  </form>
  <div id="recipeContainer" class="hidden">

    <% if(locals.recepie) { %>
      <h3>Ingredients:</h3>
      <ul id="ingredientsList">
        <li><%= recepie.ingredients.protein.name,recepie.ingredients.preparation  %></li>
        <li><%= recepie.ingredients.salsa.name  %></li>
        <li> <% recepie.ingredients.toppings.forEach(element => { %>
          <li> <%= element.quantity %> of <%= element.name %> </li>
      </li>
      <% }) %>
      </ul>

      <% } else { %>
      <h2>Pick your favourite taco ingredient 👆</h2>
        
      <% } %>

  </div>
</body>

</html>